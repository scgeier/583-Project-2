<!DOCTYPE html>
<html>
    <head>
     <meta charset="utf-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Contacts</title>
        <link rel="stylesheet" type="text/css" href="../../css/styles.css" />
        <link rel="stylesheet" href="../../css/bootstrap.css" />
        <script type="text/javascript" src="http://code.jquery.com/jquery-2.2.1.min.js"></script>
        <script type="text/javascript" src="../../js/main.js"></script>
    </head>
    <body>
        
<nav class="navbar navbar-default butterfly">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        <img alt="Brand" src="../../img/butterfly-bangla.png">
      </a>
    </div>
  </div>
</nav>

<container>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
         <h2 class="title">Contacts</h3>
        <% if (contacts.length) { %>
         <dl class="accordion">
            <% for (var i in contacts) { %>
            <div class="contact-box">
            <dt class="list-names">
                <a href="#"><h4><%= contacts[i].first %> <%= contacts[i].last %></h4></a>
                <a href="#" class="contact-company"><%= contacts[i].business %></a>
            </dt>
          
            <dt class="expanded-info">
             <a class="contact-name" href="/contacts/<%= contacts[i].last %>">Edit</a>
               <%= contacts[i].phone %></br>
               <%= contacts[i].email %></br>
               <%= contacts[i].address %></br>
               <%= contacts[i].city %><%= contacts[i].state%><%= contacts[i].zip%></br>
               <%= contacts[i].notes%>
            </dt>
            </div>
         </dl>
            <% } %>
       
        <% } else { %>
        <h4 class="msg">Your address book is currently empty</h4>
        <% } %>

        <p><a href="/contact/new">Add Contact</a></p>
    </div>
   </div>
  </container>
 </body>
</html>
